<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.graphicsandsound.ListGamesActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Seleccione una de las siguientes partidas:"
            android:layout_marginTop="20dp" android:textSize="20dp"/>

        <ListView
            android:id="@+id/games_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />
        <Button
            android:id="@+id/go_back3"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Volver al menu" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>