<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.graphicsandsound.OnlineActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints">
        <com.example.graphicsandsound.BoardView
            android:id="@+id/board_online"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
            </RelativeLayout>
            <TextView android:id="@+id/information_online" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:text="info"
                android:gravity="center_horizontal" android:layout_marginTop="60dp"
                android:textSize="20dp" />
            <Button
                android:id="@+id/go_back4"
                android:layout_width="match_parent"
                android:layout_marginTop="80dp"
                android:layout_height="wrap_content"
                android:text="Volver al menu" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>