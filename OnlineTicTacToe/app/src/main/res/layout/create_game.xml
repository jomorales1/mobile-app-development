<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.graphicsandsound.CreateGameActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Ingrese el nombre de la partida:"
            android:layout_marginTop="20dp" android:textSize="20dp"/>
        <EditText
            android:id="@+id/game_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"/>
        <Button
            android:id="@+id/create_game"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Crear" />
        <Button
            android:id="@+id/go_back2"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Volver al menu" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>